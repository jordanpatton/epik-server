doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='csrf-token', content=_csrf)
    meta(name='author', content='')
    title #{title || "Log In"}
    != css('main')
  body(style="padding-top:0;")
    .container
      h3 Log In
      form(role="form" method="POST" id="login" name="login" class="form-horizontal")
        input(type="hidden" name="_csrf" value=_csrf)
        fieldset
          div(row)
            div(class="col-lg-12 well")
              div(class="form-group")
                div(row)
                  div(class="col-lg-12")
                    label(for="password") Password
                div(row)
                  div(class="col-lg-12")
                    input(type="password" class="form-control" id="password" name="password" placeholder="(required)" required=true)
          div(row)
            div(class="col-lg-12")
              button(type="submit" class="btn btn-primary pull-right")
                span(class="ion-locked")
                | Log In
    != js('lib/jquery-2.1.3.min')
    != js('lib/bootstrap.min')
