.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        span.ion-android-share
        | &nbsp;Epik
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if user
          li(class=(title=='Home' || title=='Dashboard')?'active':undefined)
            a(href='/') Home
        if user && user.role && ['Administrator','Editor'].indexOf(user.role)!==-1
          li.dropdown(class=(title=='CRUD' || title=='Surveys' || title=='Responses' || title=='Users')?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | CRUD&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/workflow/crud/')
                  span.ion-home
                  | Home
              li.divider
              li
                a(href='/workflow/crud/#/surveys')
                  span.ion-document-text
                  | Surveys
              li.divider
              li
                a(href='/workflow/crud/#/responses')
                  span.ion-chatbubble-working
                  | Responses
              if user && user.role && ['Administrator'].indexOf(user.role)!==-1
                li.divider
                li
                  a(href='/workflow/crud/#/users')
                    span.ion-person-stalker
                    | Users
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Log In
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title=='Account Management' || title=='Users')?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account')
                  span.ion-person
                  | My Account
              li.divider
              li
                a(href='/logout')
                  span.ion-log-out
                  | Log Out
